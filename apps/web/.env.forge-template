# ============================================
# BLENDABLE - PRODUCTION .ENV FOR LARAVEL FORGE
# ============================================
# Copy this content to your .env file on Forge
# Replace all placeholder values with your actual credentials
# ============================================

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="Blendable"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Frontend App Name (for page titles)
VITE_APP_NAME=Blendable

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Forge typically creates MySQL databases
# Use the credentials from Forge's database section
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=blendable_production
DB_USERNAME=forge
DB_PASSWORD=your_secure_password_here

# ============================================
# REDIS CONFIGURATION
# ============================================
# Forge typically provides Redis on localhost
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_STORE=redis
CACHE_PREFIX=blendable-cache-

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_CONNECTION=redis

# ============================================
# MAIL CONFIGURATION
# ============================================
# Default to log (change for production)
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@blendable.com"
MAIL_FROM_NAME="${APP_NAME}"

# For SendGrid (recommended for production):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key
# MAIL_ENCRYPTION=tls

# For Mailgun:
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=your_domain.mailgun.org
# MAILGUN_SECRET=your_mailgun_secret
# MAILGUN_ENDPOINT=api.mailgun.net

# ============================================
# AI API KEYS
# ============================================
# Get these from each provider's dashboard
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_ai_api_key_here

# Optional: Additional AI providers
# MISTRAL_API_KEY=your_mistral_key
# DEEPSEEK_API_KEY=your_deepseek_key
# PERPLEXITY_API_KEY=your_perplexity_key

# ============================================
# STRIPE CONFIGURATION (LIVE MODE)
# ============================================
# IMPORTANT: Use LIVE keys from Stripe Dashboard
STRIPE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (from Stripe Dashboard -> Products)
STRIPE_PRO_PRICE_ID=price_your_pro_price_id_here
STRIPE_BUSINESS_PRICE_ID=price_your_business_price_id_here

# ============================================
# FILE STORAGE
# ============================================
# Default to local storage
FILESYSTEM_DISK=local

# For AWS S3 (recommended for production):
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=your_bucket_name
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Sanctum SPA authentication
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com

# Broadcast driver
BROADCAST_DRIVER=log

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# ============================================
# MONITORING
# ============================================
# Telescope (disable in production or restrict access)
TELESCOPE_ENABLED=false

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

